---
import { CONTACT_INFO } from '@/utils/constants/contactInfo'
import SocialPill from './SocialPill.astro'
import LinkedInIcon from '@/components/icons/LinkedIn.astro'
import GitHubIcon from '@/components/icons/GitHub.astro'

const currentYear = new Date().getFullYear()
---

<footer
  class='opacity-80 m-4 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center px-4'
>
  <div
    class='rounded-lg w-full max-w-screen-xl mx-auto flex flex-col md:flex-row items-center justify-between py-4'
  >
    <span class='text-xs sm:text-center text-zinc-800/90 dark:text-zinc-200/90'
      >Â© {currentYear}
      Derechos reservados
    </span>
    <ul
      class='flex flex-wrap items-center mt-3 text-xs text-zinc-800/90 dark:text-zinc-200/90 md:mt-0'
    >
      <li>
        {CONTACT_INFO.EMAIL}
      </li>
      <!-- <li>
        <a
          id='contacto'
          href=`mailto:${CONTACT_INFO.EMAIL}`
          class='hover:underline'>Contacto</a
        >
      </li> -->
    </ul>
    <ul
      class='flex flex-wrap items-center mt-3 text-sm text-zinc-800/90 dark:text-zinc-200/90 md:mt-0 gap-4'
    >
      <li>
        <SocialPill class='border-0' href={CONTACT_INFO.LINKEDIN}>
          <LinkedInIcon class='size-6' />
        </SocialPill>
      </li>
      <li>
        <SocialPill class='border-0' href={CONTACT_INFO.GITHUB}>
          <GitHubIcon class='size-6' />
        </SocialPill>
      </li>
    </ul>
  </div>
</footer>
